<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <com.github.customview.MyTextView
                android:id="@+id/tv_xitong_tongzhi_date"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                tools:text="2017-11-11"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                app:my_tv_solid="@color/gray_d7"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:my_tv_corner_radius="18dp"
                android:textColor="@color/white"
                />
            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:my_ll_solid="@color/white"
                app:my_ll_all_line="true"
                app:my_ll_corner_radius="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginTop="15dp"
                app:my_ll_border_color="@color/gray_d7"
                app:my_ll_border_width="2px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tv_xitong_tongzhi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="邀请好友得现金奖励"
                    android:textSize="17sp"
                    />
                <TextView
                    android:id="@+id/tv_xitong_tongzhi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2017-11-03 09:48:07"
                    android:textColor="@color/gray_99"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/tv_xitong_tongzhi_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="邀请好友得奖励邀请好友得奖励邀请好友得奖励邀请好友得奖励邀请好友得奖励邀请好友得奖励"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_99"
                    />
            </com.github.customview.MyLinearLayout>
        </LinearLayout>
    </com.library.base.ProgressLayout>

</LinearLayout>