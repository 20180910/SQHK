<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        >
        <com.github.customview.MyImageView
            android:id="@+id/iv_my_xiaji"
            android:layout_width="42dp"
            android:layout_height="42dp"
            tools:src="@drawable/banner"
            app:my_iv_radius="21dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_my_xiaji_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="建设银行"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_my_xiaji_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123***231"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_my_xiaji_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017-11-11"
            />
    </LinearLayout>
</LinearLayout>