<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:orientation="horizontal"
       android:background="@color/white"
       android:gravity="center_vertical"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="卡号"
           android:ems="4"
           />
       <com.github.customview.MyEditText
           android:id="@+id/et_add_bank_account"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/white"
           android:gravity="center_vertical"
           android:textSize="13sp"
           app:my_et_solid="@color/white"
           android:paddingLeft="0dp"
           android:hint="输入信用卡卡号"
           />
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/background_f2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行"
            android:ems="4"
            />
        <TextView
            android:id="@+id/tv_add_bank_select"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:hint="选择发卡银行"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/background_f2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:ems="4"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_add_bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="0dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            app:my_et_solid="@color/white"
            android:hint="输入持卡人姓名"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/background_f2"
        />
    <com.github.customview.MyTextView
        android:id="@+id/tv_add_bank"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:my_tv_solid="@color/press_theme_color"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:my_tv_corner_radius="4dp"
        android:layout_marginTop="40dp"
        android:text="保存"
        android:textColor="@color/white"
        app:my_tv_press="@color/theme_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>