<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:background="@color/app_bar"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textSize="19sp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/iv_my_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_msg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_my_has_msg"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:my_tv_solid="@color/red"
            app:my_tv_corner_radius="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_f2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/app_bar"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    >
                    <com.github.customview.CircleImageView
                        android:id="@+id/civ_my"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/my_people"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="13213234234234"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/tv_my_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="账户余额:1232130"
                            android:textColor="@color/white"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_my_yinhangka"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="我的银行卡"
                        android:drawableLeft="@drawable/wode_icon03"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:id="@+id/tv_my_zhangdan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="我的账单"
                        android:drawableLeft="@drawable/wode_icon04"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:id="@+id/tv_my_zhanghu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="我的账户"
                        android:drawableLeft="@drawable/wode_icon08"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:id="@+id/tv_my_yaoqing"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="邀请好友"
                        android:drawableLeft="@drawable/wode_icon05"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_my_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="asfdsdf"
                        android:drawablePadding="10dp"
                        android:textSize="13sp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_my_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="安全中心"
                        android:drawableLeft="@drawable/wode_icon06"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:id="@+id/tv_my_bangzhu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="帮助中心"
                        android:drawableLeft="@drawable/wode_icon07"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/jiantou_right1"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_f2"
                    />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.library.base.ProgressLayout>
</LinearLayout>