<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <include layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加储蓄卡"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <com.github.customview.MyLinearLayout
            android:id="@+id/ll_add_bank_chuxu"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:my_ll_all_line="true"
            app:my_ll_border_dashWidth="5dp"
            app:my_ll_border_dashGap="2dp"
            app:my_ll_border_width="2px"
            app:my_ll_border_color="@color/gray_99"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加储蓄卡"
                android:textColor="@color/theme_color"
                android:textSize="17sp"
                android:drawableLeft="@drawable/bank_kabao"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                />
        </com.github.customview.MyLinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代还信用卡(最多绑定5张)"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />
        <com.github.customview.MyLinearLayout
            android:id="@+id/ll_add_bank_xinyong"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:my_ll_all_line="true"
            app:my_ll_border_dashWidth="5dp"
            app:my_ll_border_dashGap="2dp"
            app:my_ll_border_width="2px"
            app:my_ll_border_color="@color/gray_99"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加信用卡"
                android:textColor="@color/theme_color"
                android:textSize="17sp"
                android:drawableLeft="@drawable/bank_kabao"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                />
        </com.github.customview.MyLinearLayout>
    </LinearLayout>
</LinearLayout>